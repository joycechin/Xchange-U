<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= helping_user_path(@user) %>">
          <span id="helping" class="stat">
            <%= @user.helping.count %> helping
          </span>
        </a>
      </td>
      <td>
        <a href="<%= helpers_user_path(@user) %>">
          <span id="helpers" class="stat">
            <%= pluralize(@user.helpers.count, "helper") %>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>
