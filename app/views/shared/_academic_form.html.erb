<%= form_for @academic do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
	sharing
    <%= select_tag "subject", options_from_collection_for_select(@academic.subject , "subject", "id"), :teach %>
	for
	<%= select_tag "subject", options_from_collection_for_select(@academic.subject, "subject", "id"), :learn %>
	<br>
	<%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>